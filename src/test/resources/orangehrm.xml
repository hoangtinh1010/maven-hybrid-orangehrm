<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="OrangeHRM - UI Automation Test" verbose="1">

    <parameter name="appUrl" value="https://opensource-demo.orangehrmlive.com/"/>

    <test name="Run on FIREFOX Browser">
        <parameter name="browser" value="Firefox"></parameter>
        <classes>
            <class name="ui.orangehrm.user.Login_03_Multiple_Browser"/>
        </classes>
    </test>
    <test name="Run on CHROME Browser">
        <parameter name="browser" value="Chrome"></parameter>
        <classes>
            <class name="ui.orangehrm.user.Login_03_Multiple_Browser"/>
        </classes>
    </test>
    <test name="Run on EDGE Browser">
        <parameter name="browser" value="Edge"></parameter>
        <classes>
            <class name="ui.orangehrm.user.Login_03_Multiple_Browser"/>
        </classes>
    </test>

</suite>